{
  "expo": {
    "name": "NationPress",
    "slug": "nationpressapp",
    "version": "1.0.12",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nationpress",
    "userInterfaceStyle": "light",
    "jsEngine": "hermes",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#6B2C1A",
      "image": "./assets/images/splash-icon.png",
      "imageWidth": 200
    },
    "assetBundlePatterns": [
      "**/*",
      "assets/images/logo.png",
      "assets/images/logo-hindi.png"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nationpress.app",
      "jsEngine": "jsc",
      "associatedDomains": [
        "applinks:www.nationpress.com",
        "applinks:nationpress.com",
        "applinks:www.rashtrapress.com",
        "applinks:rashtrapress.com"
      ],
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-3552884226286157~1266345200"
      },
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "nation-press.s3.ap-south-1.amazonaws.com": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionRequiresForwardSecrecy": true,
              "NSExceptionMinimumTLSVersion": "TLSv1.2"
            },
            "nationpress.com": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionRequiresForwardSecrecy": true,
              "NSExceptionMinimumTLSVersion": "TLSv1.2"
            },
            "rashtrapress.com": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionRequiresForwardSecrecy": true,
              "NSExceptionMinimumTLSVersion": "TLSv1.2"
            }
          }
        }
      },
      "entitlements": {
        "aps-environment": "production",
        "com.apple.security.application-groups": [
          "group.com.nationpress.app.onesignal"
        ]
      }
    },
    "android": {
      "package": "com.nationpress.app",
      "versionCode": 12,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-3552884226286157~1266345200"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "www.nationpress.com",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "www.rashtrapress.com",
              "pathPrefix": "/"
            },
            {
              "scheme": "nationpress"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#6B2C1A",
          "dark": {
            "backgroundColor": "#6B2C1A"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  },
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-3552884226286157~1266345200",
    "ios_app_id": "ca-app-pub-3552884226286157~7057179198",
    "user_tracking_usage_description": "This identifier will be used to deliver personalized ads to you."
  }
}
